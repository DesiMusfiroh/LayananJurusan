<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    app:cardCornerRadius="10dp"
    android:elevation="10dp"
    android:layout_margin="8dp"
    app:cardMaxElevation="4dp"
    android:background="@color/white">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <FrameLayout
            android:id="@+id/frameLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@color/white">

            <ImageView
                android:id="@+id/img_item_photo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:background="@color/white" />

        </FrameLayout>

        <TextView
            android:id="@+id/tv_item_1"
            style="@style/Text.Regular"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:background="@color/shimmerDark"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="@string/title_news"
            android:textColor="@color/shimmerDark"
            app:layout_constraintBottom_toTopOf="@id/tv_item_2"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            />
        <TextView
            android:id="@+id/tv_item_2"
            style="@style/Text.Regular"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:background="@color/shimmerDark"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="@string/title_news"
            android:textColor="@color/shimmerDark"
            app:layout_constraintBottom_toTopOf="@id/tv_item_3"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
             />
        <TextView
            android:id="@+id/tv_item_3"
            style="@style/Text.Regular"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginLeft="16dp"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="@string/title_news"
            android:textColor="@color/shimmerDark"
            android:background="@color/shimmerDark"
            app:layout_constraintBottom_toBottomOf="@+id/frameLayout"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>


