<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Jurusan" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="bottomSheetDialogTheme">@style/AppBottomSheetDialogTheme</item>
    </style>

    <style name="InputText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">48dp</item>
        <item name="background">@drawable/bg_input</item>
        <item name="android:layout_marginTop">12dp</item>
    </style>

    <style name="table_head">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@drawable/bg_cell_table_head</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="table_cell_body">
        <item name="android:background">@drawable/bg_cell_table_body</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Text.Large">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20sp</item>
        <item name="fontFamily">@font/noto_sans</item>
        <item name="color">@android:color/black</item>
    </style>

    <style name="Text.Medium">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/noto_sans</item>
    </style>

    <style name="Text.Regular">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/rocknroll_one</item>
    </style>

    <style name="Text.Small">
        <item name="android:textSize">11sp</item>
        <item name="fontFamily">@font/rocknroll_one</item>
    </style>

    <style name="Text.Menu">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/noto_sans</item>
    </style>

    <style name="CustomTextAppearanceTab" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
        <item name="android:textAllCaps">false</item>
        <item name="fontFamily">@font/rocknroll_one</item>
        <item name="android:textSize">13sp</item>
    </style>

    <style name="AppBottomSheetDialogTheme"
        parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
    </style>

    <style name="AppModalStyle"
        parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bg_dialog_bottom</item>
    </style>
</resources>